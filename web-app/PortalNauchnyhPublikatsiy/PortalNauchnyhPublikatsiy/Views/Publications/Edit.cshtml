@model PortalNauchnyhPublikatsiy.Application.DTO.UpdatePublicationDto

@{
    ViewData["Title"] = "Редактирование публикации";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Скрытое поле для передачи Id -->
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label">Тип</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Year" class="control-label">Год</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="JournalConferenceId" class="control-label">Журнал / Конференция</label>
                <select asp-for="JournalConferenceId" class="form-control" asp-items="ViewBag.JournalConferenceId">
                    <option value="">-- Выберите журнал --</option>
                </select>
                <span asp-validation-for="JournalConferenceId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DOI" class="control-label">DOI</label>
                <input asp-for="DOI" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="FilePath" class="control-label">Путь к файлу</label>
                <input asp-for="FilePath" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </div>
        </form>
    </div>
</div>