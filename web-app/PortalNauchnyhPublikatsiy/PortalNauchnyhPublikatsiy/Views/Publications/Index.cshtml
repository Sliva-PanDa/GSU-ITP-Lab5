@model IEnumerable<PortalNauchnyhPublikatsiy.Application.DTO.PublicationDto>

@{
    ViewData["Title"] = "Список публикаций";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Добавить новую публикацию</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Год</th>
            <th>Журнал / Конференция</th>
            <th>DOI</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.JournalName)</td>
                <td>@Html.DisplayFor(modelItem => item.DOI)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>