@model IEnumerable<PortalNauchnyhPublikatsiy.Application.DTO.PublicationDto>

@{
    ViewData["Title"] = "Список публикаций";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Добавить новую публикацию</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color d-flex align-items-center mb-3">
        <div class="me-2">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Поиск по названию..." />
        </div>
        <div class="me-2">
            <input type="number" name="year" value="@ViewData["CurrentYearFilter"]" class="form-control" placeholder="Год" />
        </div>
        <div class="me-2">
            <input type="submit" value="Найти" class="btn btn-info" />
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">Сбросить</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Год</th>
            <th>Журнал / Конференция</th>
            <th>DOI</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>@Html.DisplayFor(modelItem => item.JournalName)</td>
                <td>@Html.DisplayFor(modelItem => item.DOI)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>