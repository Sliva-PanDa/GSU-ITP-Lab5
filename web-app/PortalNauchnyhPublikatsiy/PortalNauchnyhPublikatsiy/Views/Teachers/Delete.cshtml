@model PortalNauchnyhPublikatsiy.Application.DTO.TeacherProfileDto
@{
    ViewData["Title"] = "Удаление";
}

<h1>@ViewData["Title"]</h1>
<h3>Вы уверены, что хотите удалить преподавателя?</h3>
<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Должность</dt>
        <dd class="col-sm-9">@Model.Position</dd>
        <dt class="col-sm-3">Кафедра</dt>
        <dd class="col-sm-9">@Model.DepartmentName</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </form>
</div>